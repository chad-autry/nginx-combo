[Unit]
Description=SSL Certificate Syncronization
# Dependencies
Requires=etcd.service

# Ordering
After=etcd.service

[Service]
ExecStart=/usr/bin/etcdctl watch  /config/ssl
ExecStartPost=/usr/bin/etcdctl get /config/ssl > /etc/ssl/cert.crt
Restart=always

[X-Fleet]
Global=true
MachineMetadata=frontend=true
